<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Assessment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/topAlayout"
        android:background="#228b22">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="Career Assessment"
            android:textSize="24dp"
            android:textColor="@color/colorPrimary">

        </TextView>

    </RelativeLayout>



        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="530sp"
            android:id="@+id/scrolTest"
            android:layout_below="@id/topAlayout"
            android:fillViewport="true"

            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/career_message"
                android:isScrollContainer="true"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="Personality Traits"
                    android:background="@drawable/display_careers"
                    android:textSize="20dp"
                    android:textColor="#228b22">

                </TextView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="Please tick only the personality traits that describe you
                            Perfectly. "
                    android:textSize="14dp"
                    android:fontFamily="sans-serif"
                    android:background="@drawable/display_careers"
                    android:textColor="@color/colorPrimary">

                </TextView>

                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/display_careers"
                    android:text="I can say that I am very good in talking and I love it."
                    android:id="@+id/cbTalk">
                </CheckBox>
                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/display_careers"
                    android:text="I can easily build a strong relationship with strangers."
                    android:id="@+id/cbStudenRelationship">
                </CheckBox>
                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/display_careers"
                    android:text="I enjoy talking to a large group of people."
                    android:id="@+id/cbEducating">
                </CheckBox>
                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/display_careers"
                    android:text="I am a friendly person and people can easily approach me."
                    android:id="@+id/cbFriendly">
                </CheckBox>


                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/display_careers"
                    android:text="People describe me as a very kind and considerate person"
                    android:id="@+id/cbKind">
                </CheckBox>
                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/display_careers"
                    android:text="I love learning new things a lot"
                    android:id="@+id/cbContinousLeaner">
                </CheckBox>
                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/display_careers"
                    android:text="I enjoy working with customers."
                    android:id="@+id/cbCustomerService">
                </CheckBox>
                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/display_careers"
                    android:text="I am a creative person"
                    android:id="@+id/cbCreative">
                </CheckBox>
                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/display_careers"
                    android:text="I am a very curious person"
                    android:id="@+id/cbCurious">
                </CheckBox>
                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/display_careers"
                    android:text="I enjoy being at my feet almost the whole day, rather than sitting the whole day"
                    android:id="@+id/cbAdvocator">
                </CheckBox>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/display_careers"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="Soft Skills"
                    android:textSize="20dp"
                    android:textColor="#228b22">

                </TextView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/display_careers"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="Please tick only the Soft skills that describe you
                            Perfectly. "
                    android:textSize="14dp"
                    android:fontFamily="sans-serif"
                    android:textColor="@color/colorPrimary">
                </TextView>
                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/display_careers"
                    android:text="I have a very good communication skill"
                    android:id="@+id/cbCommunicationSkill">
                </CheckBox>
                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/display_careers"
                    android:text="I have a good planning skill"
                    android:id="@+id/cbPlanning">
                </CheckBox>
                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/display_careers"
                    android:text="I have a good Analytical skill"
                    android:id="@+id/cbAnalytical">
                </CheckBox>
                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/display_careers"
                    android:text="I have good skills in working independently"
                    android:id="@+id/cbIndependant">
                </CheckBox>
                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/display_careers"
                    android:text="I have a good time management skills"
                    android:id="@+id/cbTimeManagement">
                </CheckBox>
                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/display_careers"
                    android:text="I have a good Problem Solving skill"
                    android:id="@+id/cbSolvingProblem">
                </CheckBox>



                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/display_careers"
                    android:text="I have good skills in working with people (team player)"
                    android:id="@+id/cbTeamPlayer">
                </CheckBox>

                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/display_careers"
                    android:text="I have good skills in adapting so quickly to change(like change of Technology)"
                    android:id="@+id/cbAdaptation">
                </CheckBox>
                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/display_careers"
                    android:text="I have good skills for running a business"
                    android:id="@+id/cbBusinessSkill">
                </CheckBox>
                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/display_careers"
                    android:text="I have good leadership skills"
                    android:id="@+id/cbLeadership">
                </CheckBox>

                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/display_careers"
                    android:text="I have good Multitasking skills"
                    android:id="@+id/cbMultiTasking">
                </CheckBox>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_centerHorizontal="true">
                    <Button
                        android:layout_width="290dp"
                        android:layout_height="50dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:id="@+id/btnSubmitAssessment"
                        android:background="#228b22"
                        android:text="Submit Assessment"
                        android:textColor="#ffff">

                    </Button>
                </RelativeLayout>



                <View
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </ScrollView>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/finlayout"
        android:layout_below="@+id/scrolTest"
        android:background="#228b22">

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/belowlayout"
        android:layout_below="@+id/finlayout"
        android:background="@color/colorPrimary">

    </RelativeLayout>

</RelativeLayout>